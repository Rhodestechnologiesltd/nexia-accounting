<odoo>
    <record id="view_mass_clean_confirm_wizard" model="ir.ui.view">
        <field name="name">mass.clean.confirm.wizard.form</field>
        <field name="model">mass.clean.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Deletion">
                <div>
                    <p>Are you sure you want to delete the selected data?</p>
                </div>
                <footer>
                    <button string="Yes" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" type="object" name="action_cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
