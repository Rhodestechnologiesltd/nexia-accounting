<odoo>
    <data>
        <!-- Form View for Mass Clean Manufacturing Wizard -->
        <record id="view_mass_clean_manufacturing_wizard" model="ir.ui.view">
            <field name="name">mass.clean.manufacturing.wizard.form</field>
            <field name="model">mass.clean.manufacturing.wizard</field>
            <field name="arch" type="xml">
                <form string="Mass Clean Manufacturing Orders">
                    <group>
                        <field name="action" required="1"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="confirm_action" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open the wizard -->
        <record id="action_mass_clean_manufacturing_wizard" model="ir.actions.act_window">
            <field name="name">Mass Clean Manufacturing Orders</field>
            <field name="res_model">mass.clean.manufacturing.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
