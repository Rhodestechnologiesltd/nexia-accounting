<odoo>
    <record id="view_confirm_deletion_wizard_form" model="ir.ui.view">
        <field name="name">confirm.deletion.wizard.form</field>
        <field name="model">confirm.deletion.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Deletion" create="false" edit="false">
                <div>
                    <p>Are you sure you want to delete the selected data?</p>
                    <field name="selected_modules" readonly="1" widget="text" />
                </div>
                <footer>
                    <button string="Yes" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" type="object" name="action_cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_deletion_wizard" model="ir.actions.act_window">
        <field name="name">Confirm Deletion</field>
        <field name="res_model">confirm.deletion.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
